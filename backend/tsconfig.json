        "target": "ESNext",

        "module": "Node16",

        "outDir": "./dist",

        "esModuleInterop": true,

        "forceConsistentCasingInFileNames": true,

        "strict": true,

        "skipLibCheck": true,

        "moduleResolution": "Node16"
